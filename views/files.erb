<ul>
  <% @files.each do |file_name| %>
      <li>
        <a href="<%= file_name %>"> <%= file_name %></a>
        <a href="<%= file_name %>/edit"> edit </a>
        <form class="inline" method="post" action="/<%= file_name %>/delete">
          <button type="submit">delete</button>
        </form>
      </li>
  <% end %>
</ul>

<p><a href="/new"> Create New Document</a></p>

<% if session[:username]%>
    <form method="post" action="/users/signout">
      <p class="user-status">
        Signed in as <%= session[:username] %>.
      <button type="submit">Sign Out</button>
      </p>
    </form>
<% else %>
    <p class="user-status"><a href="/users/signin">Sign In</a></p>
<% end %>

